<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".ui.supplier.EditSupplierFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:id="@+id/navigation"
            android:background="@color/colorPrimary"

            android:layout_alignParentLeft="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="Edit Supplier"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white" />
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
    >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            app:endIconMode="custom"
            app:endIconTint="@android:color/black"
            app:endIconDrawable="@drawable/ic_baseline_business_24"
            app:endIconTintMode="src_atop"
            android:layout_marginBottom="10dp"
            android:theme="@style/TextLabel"
            style="@style/TextLabel"
            android:textColorHint="@android:color/black"
            android:layout_width="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/suppliername"
                android:maxLength="30"
                android:hint="Supplier Name"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/ic_baseline_person_24"
            app:endIconMode="custom"
            app:endIconTint="@android:color/black"
            android:layout_marginBottom="10dp"
            app:endIconTintMode="src_atop"
            android:theme="@style/TextLabel"
            style="@style/TextLabel"
            android:textColorHint="@android:color/black"
            android:layout_width="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/contactperson"
                android:maxLength="20"
                android:hint="Contact Person"

                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/ic_baseline_post_add_24"
            app:endIconMode="custom"
            app:endIconTint="@android:color/black"
            android:layout_marginBottom="10dp"
            app:endIconTintMode="src_atop"
            android:theme="@style/TextLabel"
            style="@style/TextLabel"
            android:textColorHint="@android:color/black"
            android:layout_width="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/address"
                android:hint="Address"
                android:maxLength="20"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/ic_baseline_contact_phone_24"
            app:endIconMode="custom"
            app:endIconTint="@android:color/black"
            android:layout_marginBottom="10dp"
            app:endIconTintMode="src_atop"
            android:theme="@style/TextLabel"
            style="@style/TextLabel"
            android:textColorHint="@android:color/black"
            android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/contact"
            android:maxLength="20"
            android:hint="0700107838"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:inputType="number"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editSupplier"
            android:text="Edit Supplier"
            android:gravity="center"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_gravity="end"
            android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/white"
            android:textSize="16.5sp"
            android:textStyle="bold"
            android:backgroundTint="@color/colorAccent"
            app:cornerRadius="5dp"
            app:rippleColor="@color/colorPrimary"

            />
        <ProgressBar
            android:id="@+id/avi"
            android:padding="12dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />
    </LinearLayout>
    </RelativeLayout>
</FrameLayout>