<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:shapeAppearance="@color/white"
    app:cardUseCompatPadding="true"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="5dp"
    app:cardCornerRadius="4dp"
    android:elevation="14dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:text="P-234568"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="5dp"
            android:maxLength="30"
            android:gravity="center"
            android:text="Tablet"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/quantityLeft"
            android:layout_toRightOf="@id/category"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Quantity"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:layout_toStartOf="@id/quantityLeft" />
        <TextView
            android:id="@+id/quantityLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:padding="5dp"
            android:gravity="right"
            android:text="25"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"  />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_below="@+id/code"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="COSMOS"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:layout_marginEnd="90dp" />
        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:padding="5dp"
            android:textStyle="italic"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/edit"
            android:text="Sumsang"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:paddingEnd="5dp" />
        <ImageView
            android:id="@+id/edit"
            android:layout_below="@id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/delete"
            android:layout_below="@id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/productName"
            android:padding="5dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:padding="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Price:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:paddingEnd="5dp" />
        <TextView
            android:id="@+id/priceValue"
            android:layout_width="wrap_content"
            android:layout_below="@+id/productName"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/price"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:maxLength="15"
            android:textSize="12sp"
            android:padding="5dp"
            android:text="350 Kshs"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:layout_toEndOf="@id/price"
            android:paddingStart="5dp" />
        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_toLeftOf="@+id/costValue"
            android:textSize="12sp"
            android:paddingRight="5dp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Cost:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorCost"
            android:paddingEnd="5dp" />
        <TextView
            android:id="@+id/costValue"
            android:layout_width="wrap_content"
            android:layout_below="@+id/productName"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:maxLength="15"
            android:ellipsize="end"
            android:padding="5dp"
            android:singleLine="true"
            android:text="250 Kshs"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorCost"
            android:paddingStart="5dp" />
        <TextView
            android:id="@+id/unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:textSize="12sp"
            android:padding="5dp"
            android:gravity="left"
            android:text="Per Pack"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/ReorderLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unit"
            android:textSize="12sp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Reorder Level:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorCost"
            android:paddingEnd="5dp" />
        <TextView
            android:id="@+id/Reorder"
            android:layout_width="wrap_content"
            android:layout_below="@+id/unit"
            android:gravity="right"
            android:layout_toRightOf="@+id/ReorderLevel"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:maxLength="15"
            android:padding="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="25"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorCost"
            android:paddingStart="5dp" />
        <ImageView
            android:id="@+id/addNewProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productName"
            android:padding="5dp"
            android:paddingRight="5dp"
            android:visibility="visible"
            android:gravity="center"
            android:src="@drawable/ic_baseline_add_24"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/pullOut"
            android:visibility="invisible"
            android:layout_below="@+id/price"
            android:layout_centerHorizontal="true"
            android:text="Remove Stock"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            app:cornerRadius="5dp"
            app:rippleColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_below="@id/price"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="5dp"
            android:gravity="right"
            android:text="PHILMED"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:layout_marginStart="80dp" />
        <TextView
            android:id="@+id/expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/supplier"
            android:layout_toLeftOf="@+id/expiryDate"
            android:textSize="12sp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Expiry Date:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/purple_500"
            android:paddingEnd="5dp" />
        <TextView
            android:id="@+id/expiryDate"
            android:layout_width="wrap_content"
            android:layout_below="@+id/supplier"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="2021-04-09"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/purple_500"
            android:paddingStart="5dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>